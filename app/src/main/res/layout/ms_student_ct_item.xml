<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg" >

        <ImageButton
            android:id="@+id/iv_back"
            style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="选题" />

    </RelativeLayout>

    <View style="@style/divider_horizontal_1px" />

    <ScrollView
        style="@style/match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match" >

            <View style="@style/divider_horizontal_1px" />

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout
                android:id="@+id/llUserTag"
                style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_topic_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="课题题目" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/tvUserTag"
                    android:layout_below="@+id/ct_topic_title"
                    android:editable="false"
                    android:text="流萤梦" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_type_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="题目类型" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:editable="false"
                    android:layout_below="@+id/ct_type_title"
                    android:text="2019-01-05 17:47:28" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_resource_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="题目来源" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:layout_below="@+id/ct_resource_title"
                    android:editable="false"
                    android:text="6A-404" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_teacher_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="指导教师" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:editable="false"
                    android:layout_below="@+id/ct_teacher_title"
                    android:text="2019-01-05 17:47:28" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_number_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="可选人数" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:editable="false"
                    android:layout_below="@+id/ct_number_title"
                    android:text="2019-01-05 17:47:28" />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/reply_record_edit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/login_button_selector"
                    android:text="选　择"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout
        android:id="@+id/llUserBottomMenuContainer"
        style="@style/ll_vertical_match_wrap" >
    </LinearLayout>

</LinearLayout>