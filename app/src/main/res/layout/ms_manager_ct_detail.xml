<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg" >

        <ImageButton
            android:id="@+id/iv_back"
            style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="课题详细信息" />

    </RelativeLayout>

    <View style="@style/divider_horizontal_1px" />

    <ScrollView
        style="@style/match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match" >

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout
                android:id="@+id/llUserTag"
                style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_topic_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="课题题目" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/ct_topic"
                    android:layout_below="@+id/ct_topic_title"
                    android:editable="false"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_type_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="题目类型" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/ct_type"
                    android:editable="false"
                    android:layout_below="@+id/ct_type_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_resource_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="题目来源" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/ct_resource"
                    android:layout_below="@+id/ct_resource_title"
                    android:editable="false"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_teacher_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="所属专业" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:editable="false"
                    android:id="@+id/ct_belong_major"
                    android:layout_below="@+id/ct_teacher_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_number_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="已选人数/容纳人数" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:editable="false"
                    android:id="@+id/ct_number"
                    android:layout_below="@+id/ct_number_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_profession_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="可选范围" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/ct_profession"
                    android:editable="false"
                    android:layout_below="@+id/ct_profession_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_time_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="出题时间" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:editable="false"
                    android:id="@+id/ct_time"
                    android:layout_below="@+id/ct_time_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_task_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="任务书" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:textColor="@color/blue"
                    android:autoLink="all"
                    android:editable="false"
                    android:id="@+id/ct_task"
                    android:layout_below="@+id/ct_task_title"
                     />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_annex_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="附件" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:textColor="@color/blue"
                    android:autoLink="all"
                    android:editable="false"
                    android:id="@+id/ct_annex"
                    android:layout_below="@+id/ct_annex_title"
                     />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/ct_detail_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="题目简介" />

                <EditText
                    style="@style/edit_item_ms_border_content_final"
                    android:editable="false"
                    android:id="@+id/ct_detail"
                    android:layout_below="@+id/ct_detail_title"
                   />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

        </LinearLayout>
    </ScrollView>

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout
        android:id="@+id/llUserBottomMenuContainer"
        style="@style/ll_vertical_match_wrap" >
    </LinearLayout>

</LinearLayout>