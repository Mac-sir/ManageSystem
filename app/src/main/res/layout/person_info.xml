<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg" >

        <ImageButton
            android:id="@+id/person_info_back"
            style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="详细资料" />

        <Button
            style="@style/topbar_right_btn"
            android:text="保存" />
    </RelativeLayout>

    <View style="@style/divider_horizontal_1px" />

    <ScrollView
        style="@style/match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match" >

            <LinearLayout
                android:id="@+id/llUserBusinessCardContainer"
                style="@style/ll_vertical_match_wrap"
                android:layout_marginBottom="@dimen/padding_huge"
                android:layout_marginTop="@dimen/padding_huge" >
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/person_name"
                    style="@style/edit_item_right_et"
                    android:layout_weight="1"
                    android:maxLength="90"
                    android:editable="false"
                    android:text="流萤梦"
                    />

            </LinearLayout>
            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="学号" />

                <EditText
                    android:id="@+id/person_id"
                    style="@style/edit_item_right_et"
                    android:layout_weight="1"
                    android:maxLength="90"
                    android:text="3120150905115"
                    android:editable="false"
                    />

            </LinearLayout>
            <View style="@style/divider_horizontal_1px" />

            <View
                style="@style/divider_horizontal_1px"
                android:layout_marginBottom="@dimen/padding_huge" />

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/llUserTag"
                style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="学院" />

                <EditText
                    android:id="@+id/tvUserTag"
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:editable="false"
                    android:text="计算机学院" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="系" />

                <EditText
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:editable="false"
                    android:text="软件工程" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="专业" />

                <EditText
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:editable="false"
                    android:text="软件工程" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="班级" />

                <EditText
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:editable="false"
                    android:text="2015级 - 1班" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="性别" />

                <EditText
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:editable="false"
                    android:text="女" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="邮箱" />

                <EditText
                    android:id="@+id/person_email"
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:hint="请输入邮箱"
                    android:text="18227217142@163.com" />

                <ImageView
                    android:id="@+id/ivEmailClear"
                    style="@style/edit_item_right_clear" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="绑定手机" />

                <EditText
                    android:id="@+id/person_bind_phone"
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:text="18227217142" />

                <ImageView
                    android:id="@+id/ivBindPhoneClear"
                    style="@style/edit_item_right_clear" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout style="@style/edit_item" >

                <TextView
                    style="@style/edit_item_left_tv"
                    android:text="联系方式" />

                <EditText
                    android:id="@+id/person_phone"
                    style="@style/edit_item_right_et_child"
                    android:layout_weight="1"
                    android:hint="请输入手机号"
                    android:text="18227217142" />

                <ImageView
                    android:id="@+id/ivPhoneClear"
                    style="@style/edit_item_right_clear" />

            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

        </LinearLayout>
    </ScrollView>

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout
        android:id="@+id/llUserBottomMenuContainer"
        style="@style/ll_vertical_match_wrap" >
    </LinearLayout>

</LinearLayout>