<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg" >

        <ImageButton
            android:id="@+id/iv_back"
            style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="详细信息" />

    </RelativeLayout>

    <View style="@style/divider_horizontal_1px" />

    <ScrollView
        style="@style/match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match" >

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout
                android:id="@+id/llUserTag"
                style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/gt_name_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="教师（工号）" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/t_name_id"
                    android:layout_below="@+id/gt_name_title"
                    android:editable="false"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/gt_position_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="教师职称" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/t_pro"
                    android:editable="false"
                    android:layout_below="@+id/gt_position_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/gt_email_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="联系邮箱" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/t_email"
                    android:layout_below="@+id/gt_email_title"
                    android:editable="false"
                   />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/gt_phone_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="联系电话" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/t_phone"
                    android:editable="false"
                    android:layout_below="@+id/gt_phone_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

            <RelativeLayout style="@style/edit_item_ms_all" >

                <TextView
                    android:id="@+id/gt_college_title"
                    style="@style/edit_item_ms_border_title"
                    android:text="学　　院" />

                <EditText
                    style="@style/edit_item_ms_border_content"
                    android:id="@+id/t_college"
                    android:editable="false"
                    android:layout_below="@+id/gt_college_title"
                    />

            </RelativeLayout>

            <View style="@style/divider_horizontal_1px" />

        </LinearLayout>
    </ScrollView>

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout
        android:id="@+id/llUserBottomMenuContainer"
        style="@style/ll_vertical_match_wrap" >
    </LinearLayout>

</LinearLayout>